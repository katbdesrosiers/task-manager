@model TaskManager.Models.Project
@{
    ViewBag.Title = "Create Project";
}

<h2>Create Project</h2>

@using (Html.BeginForm())
{
    if (!Html.ViewData.ModelState.IsValid)
    {
        <div class="alert alert-danger">
            @Html.ValidationSummary(false, "Errors", new { @class = "text-danger" })
        </div>
    }

    @Html.AntiForgeryToken()

    <div class="form-group">
        @Html.LabelFor(model => model.Name)
        @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Deadline)
        @Html.EditorFor(model => model.Deadline, new { htmlAttributes = new { @class = "form-control", type = "date" } })
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Priority)
        @Html.DropDownListFor(model => model.Priority, (SelectList)ViewBag.Priorities, new { htmlAttributes = new { @class = "form-control"} })
    </div>

    <input type="submit" value="Create" class="btn btn-primary" />
}

